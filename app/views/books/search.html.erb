<h1>Search Books</h1>
<div id="prog">
	<image src="/images/prog.gif" style="display:block" />
</div>
<br style="clear:both" />
<div id="search-holder">
	<form action="/books/search" method="GET" id="search-form">
		<p>
			<label for="title">Title </label><input name="title" />
		</p>
	
		<p>
			<label for="genre">Genre</label>
			<select name="genre_id">
				<option>---</option>
				<% @genres.each do |g| %>
					<option value="<%= g.id %>"><%= g.name %></option>
				<% end %>
			</select>
		</p>


		<p>
			<label for="author">Author</label>
			<select name="genre_id">
				<option>---</option>
				<% @authors.each do |a| %>
					<option value="<%= a.id %>"><%= a.name %></option>
				<% end %>
			</select>
		</p>
		<input type="submit" value="Search" /><br />
	</form>
</div>

<div id="results">
</div>

<br style="clear:both" />